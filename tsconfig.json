{
  "compilerOptions": {
    "target": "es6",
    "outDir": "./dist/",
    "module": "commonjs",
    "jsx": "react",
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
  },
  "exclude": [
    "node_modules",
    "**/*.test.tsx",
    "public"
  ],
  "include": [
    "./src/**/*",
  ],
  "typeRoots": [
    "./node_modules/@types",
    "./typings.d.ts"
  ]
}
